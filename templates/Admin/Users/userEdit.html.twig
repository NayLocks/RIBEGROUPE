{% for user in users %}
	<div class="modal fade modal_{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-bm">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLongTitle">Modification Utilisateur</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form actions="/utilisateurs/modification/" method="POST">
				<div class="modal-body">
					<input type="hidden" class="form-control" name="id" value="{{ user.id }}">
					<table class="mb-0 table table-striped">
            			<tr>
                			<td><label for="lastName">NOM</label></td>
                			<td><label for="firstName">PRENOM</label></td>
            			</tr>
            			<tr>
                			<td><input type="text" class="form-control" name="lastName" value="{{ user.lastName }}"></td>
                			<td><input type="text" class="form-control" name="firstName" value="{{ user.firstName }}"></td>
            			</tr>
            			<tr>
                			<td colspan="2"><label for="email">ADRESSE MAIL</label></td>
            			</tr>
            			<tr>
                			<td colspan="2"><input type="text" class="form-control" name="email" value="{{ user.email }}"></td>
            			</tr>
            			<tr>
                			<td><label for="accessADM">ACCES ADMINISTRATEUR</label></td>
                			<td><label for="company">SOCIETE</label></td>
            			</tr>
            			<tr>
                			<td><input type="checkbox" class="form-control" name="accessADM"  {% if user.accessADM == 1 %}checked{% endif %}></td>
                			<td><select class="form-control" name="company">
									<option value="{{ user.company.name }}">{{ user.company.name }}</option>
									{% for company in companies %}
										<option value="{{ company.name }}">{{ company.name }}</option>
									{% endfor %}
								</select>
							</td>
            			</tr>
            			<tr>
                			<td><label for="accessFC">ACCES FICHE CLIENT</label></td>
                			<td><label for="firstName">NIVEAU FICHE CLIENT</label></td>
            			</tr>
            			<tr>
                			<td><input type="checkbox" class="form-control" name="accessFC" {% if user.accessFC == 1 %}checked{% endif %}></td>
                			<td><select class="form-control" name="titleFC">
									<option value="{{ user.titleFC }}">{{ user.titleFC }}</option>
									<option value="AUCUN">AUCUN</option>
									<option value="VENDEUR">VENDEUR</option>
									<option value="LOGISTIQUE">LOGISTIQUE</option>
									<option value="DIRECTEUR">DIRECTEUR</option>
									<option value="COMPTABILITE">COMPTABILITE</option>
								</select>
							</td>
            			</tr>
            			<tr>
                			<td><label for="accessFA">ACCES FICHE ARTICLE</label></td>
                			<td><label for="titleFA">NIVEAU FICHE ARTICLE</label></td>
            			</tr>
            			<tr>
                			<td><input type="checkbox" class="form-control" name="accessFA" {% if user.accessFA == 1 %}checked{% endif %}></td>
                			<td><select class="form-control" name="titleFA">
									<option value="{{ user.titleFA }}">{{ user.titleFA }}</option>
									<option value="AUCUN">AUCUN</option>
									<option value="ACHETEUR">ACHETEUR</option>
									<option value="COMPTABILITE">COMPTABILITE</option>
								</select>
							</td>
            			</tr>
						<tr>
                			<td><label for="username">IDENTIFIANT 2B</label></td>
                			<td><label for="password">MOT DE PASSE 2B</label></td>
            			</tr>
            			<tr>
                			<td><input type="text" class="form-control" name="username" value="{{ user.username }}"></td>
                			<td><input type="password" class="form-control" name="password"></td>
            			</tr>
        			</table>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
					<input type="submit" class="btn btn-primary" value="Modifer l'Utilisateur"/>
				</div>
				</form>
			</div>
		</div>
	</div>
	{% endfor %}
