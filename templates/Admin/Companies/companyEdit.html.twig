{% for company in companies %}
	<div class="modal fade modal_{{ company.id }}" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-sm">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLongTitle">Modification d'une Société</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form actions="/societes/modification/" method="POST">
					<div class="modal-body">
						<input name="id" type="hidden" class="form-control" value="{{ company.id }}"/>
						<label for="nom">Nom de la Société</label><input name="name" type="text" class="form-control" value="{{ company.name }}"/>
						<label for="dossierCommun">Dossier Commun</label><input name="dossierCommun" type="text" class="form-control" value="{{ company.name }}" disabled="disabled"/>
						<label for="codeCouleur">Code Couleur</label><input name="colorCode" type="color" class="form-control" value="{{ company.colorCode }}"/>
						<label for="codeCouleurText">Code Couleur Texte</label><input name="colorText" type="color" class="form-control" value="{{ company.colorText }}"/>
						<label for="baseDeDonnees">Nom de la Base de Données</label><input name="databaseName" type="text" class="form-control" value="{{ company.databaseName }}"/>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
						<input type="submit" class="btn btn-primary" value="Modifer la Société"/>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endfor %}
