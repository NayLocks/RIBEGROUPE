<!doctype html>
<html lang="fr">

	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta http-equiv="Content-Language" content="en">
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<title>Réseau Ribé >
			{% block title %}{% endblock %}
		</title>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no"/>
		<meta name="description" content="Outils / Logiciels > Réseau Ribé">
		<meta name="msapplication-tap-highlight" content="no">
		<link href="{{ asset('css/main.css') }}" rel="stylesheet">
		<link href="{{ asset('css/style.css') }}" rel="stylesheet">
		<link rel="icon" type="image/ico" href="{{ asset("images/LOGO_PICTO/ico/Reseau_Ribe_Blanc.ico") }}" />
	</head>

	<style>
		.btn-primary {
			color: #fff;
			background-color: {{app.user.company.colorCode}};
			border-color: {{ app.user.company.colorCode }};
		}
		.app-sidebar__heading {
			color: {{app.user.company.colorCode}};
		}
	</style>

	{% block javascripts %}{% endblock %}

	<body>
		<form method="POST">
		<div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
			<div class="app-header header-shadow">
				<div class="app-header__logo">
					<div></div>
					<div class="header__pane ml-auto">
						<div>
							<button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
								<span class="hamburger-box">
									<span class="hamburger-inner"></span>
								</span>
							</button>
						</div>
					</div>
				</div>
				<div class="app-header__mobile-menu">
					<div>
						<button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
							<span class="hamburger-box">
								<span class="hamburger-inner"></span>
							</span>
						</button>
					</div>
				</div>
				<div class="app-header__menu">
					<span>
						<button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
							<span class="btn-icon-wrapper">
								<i class="fa fa-ellipsis-v fa-w-6"></i>
							</span>
						</button>
					</span>
				</div>
				<div class="app-header__content">
					<div class="app-header-left">
						<div class="search-wrapper">
							<div class="input-holder">
								<input type="text" class="search-input" placeholder="Type to search">
								<button class="search-icon">
									<span></span>
								</button>
							</div>
							<button class="close"></button>
						</div>
						<ul class="header-menu nav">
						</ul>
						</div>
						<div class="app-header-right">
							<div class="header-btn-lg pr-0">
								<div class="widget-content p-0">
									<div class="widget-content-wrapper">
										<div class="widget-content-left">
											<div class="btn-group">
												<a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn">
													<img width="42" class="rounded-circle" src="{{ asset("images/LOGO_PICTO/"~ app.user.company.databaseName ~".png") }}" alt="">
													<i class="fa fa-angle-down ml-2 opacity-8"></i>
												</a>
												<div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu dropdown-menu-right">
													<h6 tabindex="-1" class="dropdown-header">Client : {{ app.user.titleFC }}</h6>
													<h6 tabindex="-1" class="dropdown-header">Article : {{ app.user.titleFA }}</h6>
													<h6 tabindex="-1" class="dropdown-header">Fournisseur : {{ app.user.titleFF }}</h6>
													<div tabindex="-1" class="dropdown-divider"></div>
													<a href="{{ path("app_logout") }}" type="button" tabindex="0" class="dropdown-item">Déconnexion</a>
												</div>
											</div>
										</div>
										<div class="widget-content-left  ml-3 header-user-info">
											<div class="widget-heading">{{ app.user.firstName }} {{ app.user.lastName }}
											</div>
											<div class="widget-subheading">
												{{ app.user.email }}
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="app-main">
					<div class="app-sidebar sidebar-shadow">
						<div class="app-header__logo">
							<div class="logo-src"></div>
							<div class="header__pane ml-auto">
								<div>
									<button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
										<span class="hamburger-box">
											<span class="hamburger-inner"></span>
										</span>
									</button>
								</div>
							</div>
						</div>
						<div class="app-header__mobile-menu">
							<div>
								<button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
									<span class="hamburger-box">
										<span class="hamburger-inner"></span>
									</span>
								</button>
							</div>
						</div>
						<div class="app-header__menu">
							<span>
								<button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
									<span class="btn-icon-wrapper">
										<i class="fa fa-ellipsis-v fa-w-6"></i>
									</span>
								</button>
							</span>
						</div>
						<div class="scrollbar-sidebar">
							<div class="app-sidebar__inner">
								<ul class="vertical-nav-menu">
									<li class="app-sidebar__heading">
										<img src="{{ asset('images/LOGO/Reseau_Ribe.png') }}" width="100%"/>
									</li>

									<li class="app-sidebar__heading">
										<a href="{{ path("index") }}">Accueil du Site</a>
									</li>

									{% if app.user.accessFC == 1 or app.user.accessADM == 1 %}
										<li>
											<a class="app-sidebar__heading">
												<i class="metismenu-icon pe-7s-notebook"></i>
												Fiches Clients
												<i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
											</a>
											<ul>
												{% if app.user.titleFC == "VENDEUR" or app.user.titleFC == "DIRECTEUR" %}
													<li><a href="{{ path("newCustomerSheet") }}">Nouvelle Fiche Client</a></li>
													<li><a href="{{ path("myCustomersSheets") }}">Mes Fiches Client</a></li>
												{% endif %}
												{% if app.user.titleFC != "VENDEUR" %}
													<li><a href="{{ path("validCustomersSheets") }}">Fiche Client à Valider</a></li>
												{% endif %}
												<li><a href="{{ path("customersSheets") }}">Liste des Fiches Client</a></li>
											</ul>
										</li>
									{% endif %}

									{# {% if app.user.accessFA == 1 or app.user.accessADM == 1 %}
										<li>
											<a class="app-sidebar__heading">
												<i class="metismenu-icon pe-7s-notebook"></i>
												Fiches Article
												<i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
											</a>
											<ul>
												{% if app.user.titleFA == "ACHETEUR" or app.user.accessADM == 1 %}
													<li><a href="{{path("newItemSheet")}}">Nouvelle Fiche Article</a></li>
													<li><a href="{{path("myItemsSheets")}}">Mes Fiches Article</a></li>
												{% endif %}
													<li><a href="{{path("itemsSheets")}}">Liste des Fiches Articles</a></li>
											</ul>
										</li>
									{% endif %} #}

									<li>
										<a class="app-sidebar__heading">
											<i class="metismenu-icon pe-7s-graph2"></i>
												Statistiques
											<i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
										</a>
										<ul>
											<li><a href="{{ path("tauxDate") }}"><i class="metismenu-icon pe-7s-graph2"></i>Taux Egalim / Bio / Local</a></li>
											<li><a href="{{ path("hodAPI") }}"><i class="metismenu-icon pe-7s-graph2"></i>Stats HubOne</a></li>
										</ul>
									</li>

									{% if app.user.accessADM == 1 %}
										<li>
											<a class="app-sidebar__heading">
												<i class="metismenu-icon pe-7s-settings"></i>
												Administration
												<i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
											</a>
											<ul>
												<li><a href="{{ path("users") }}">Utilisateurs</a></li>
												<li><a href="{{ path("companies") }}">Sociétés</a></li>
											</ul>
										</li>
									{% endif %}
									
									<li>
										<a class="app-sidebar__heading">
											<i class="metismenu-icon pe-7s-graph2"></i>
												TEST - Fiches Clients
											<i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
										</a>
										<ul>
											<li><a href="{{ path("testHTMLCustomerSheet") }}"><i class="metismenu-icon pe-7s-graph2"></i>Test HTML</a></li>
											<li><a href="{{ path("testPDFCustomerSheet") }}"><i class="metismenu-icon pe-7s-graph2"></i>Test PDF</a></li>
											<li><a href="{{ path("testMailCustomerSheet") }}"><i class="metismenu-icon pe-7s-graph2"></i>Test MAIL</a></li>
										</ul>
									</li>
									
									{# <li>
										<a class="app-sidebar__heading">
											<i class="metismenu-icon pe-7s-graph2"></i>
												TEST - Fiches Articles
											<i class="metismenu-state-icon pe-7s-angle-down caret-left"></i>
										</a>
										<ul>
											<li><a href="{{ path("test_HTML_ItemSheet") }}"><i class="metismenu-icon pe-7s-graph2"></i>Test HTML</a></li>
											<li><a href="{{ path("test_PDF_ItemSheet") }}"><i class="metismenu-icon pe-7s-graph2"></i>Test PDF</a></li>
											<li><a href="{{ path("testMailItemSheet") }}"><i class="metismenu-icon pe-7s-graph2"></i>Test MAIL</a></li>
										</ul>
									</li> #}

									<li class="app-sidebar__heading">
										<a href="{{ path("app_logout") }}" style="background-color: #ff595e; text-align: center;">Se Déconnecter</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
					<div class="app-main__outer">
						<div class="app-main__inner">
							<div class="app-page-title">
								<div class="page-title-wrapper">
									<div class="page-title-heading">
										<div class="page-title-icon">
											<i class="pe-7s-drawer icon-gradient bg-happy-itmeo"></i>
										</div>
										<div>
											{% block page %}{% endblock %}
										</div>
									</div>
									<div class="page-title-actions"> {% block actionsPage %}{% endblock %}
										</div>
									</div>
								</div>
								{% block body %}{% endblock %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script type="text/javascript" src="{{ asset('scripts/main.js') }}"></script>
		{% block autres %}{% endblock %}
		</form>
	</body>
</html>

