{% extends 'base.html.twig' %}

{% block title %}Fiches Client{% endblock %}

{% block page %}
	Liste des Fiches Client
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<div class="main-card mb-3 card">
				<div class="card-body">
					<h5 class="card-title">Liste des Fiches Client</h5>
					<table class="mb-0 table table-striped">
						<thead>
							<tr>
								<th>Société</th>
								<th>Etape Fiche</th>
								<th>Utilisateur</th>
								<th>Nom d'Appel</th>
								<th>Raison Social</th>
								<th>Code Postal</th>
								<th>Ville</th>
							</tr>
						</thead>
						<tbody>
							{% for client in clients %}
							<tr></tr>
								<tr style="background-color: {{ client.company.colorCode }}; color: {{ client.company.colorText }};">
									<th>{{ client.company.name }}</th>
									<th>{{ client.etapeFiche }}</th>
									<th>{{ client.username.firstName }} {{ client.username.lastName }}</th>
									<th>{{ client.nomAppel }}</th>
									<th>{{ client.raisonSocial }}</th>
									<th>{{ client.adrFacCodePostal }}</th>
									<th>{{ client.adrFacVille }}</th>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}