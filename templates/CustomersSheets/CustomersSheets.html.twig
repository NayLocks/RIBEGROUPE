{% extends 'base.html.twig' %}

{% block title %}Fiches Clients{% endblock %}

{% block page %}
	Liste des Fiches Clients
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-12">
			<div class="main-card mb-3 card">
				<div class="card-body">
					<h5 class="card-title">Liste des Fiches Clients</h5>

					{% if app.request.get('_route') == 'myCustomersSheets' %}
					<table class="mb-0 table table-striped">
						<thead>
							<tr style="text-align: center;">
								<th>BROUILLON</th>
								<th>LOGISTIQUE</th>
								<th>DIRECTEUR</th>
								<th>COMPTABILITE</th>
								<th>TERMINEE</th>
								<th>REFUSEE</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td style="background-color: lightgray;"></td>
								<td style="background-color: #3CC9DA;"></td>
								<td style="background-color: #E9F259;"></td>
								<td style="background-color: #E0AC0A;"></td>
								<td style="background-color: lightgreen;"></td>
								<td style="background-color: darkred;"></td>
							</tr>
						</tbody>
					</table>

					<br>
					{% endif %}

					<table class="mb-0 table table-striped">
						<thead>
							<tr>
								<th>ID</th>
								<th>Société</th>
								<th>Etape Fiche</th>
								<th>Utilisateur</th>
								<th>Crée le</th>
								<th>Nom d'Appel</th>
								<th>Raison Social</th>
								<th>Adresse de Livraison</th>
								<th>Code Postal / Ville (Livraison)</th>
								<th>Dernière Modification</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for customer in customersSheets %}
								<tr style="background-color: {{ customer.company.colorCode }}; color: {{ customer.company.colorText }};">
									<td>{{ customer.id }}</td>
									<td>{{ customer.company.name }}</td>
									<td>{{ customer.step.name }}</td>
									<td>{{ customer.date|date('d/m/Y') }}</td>
									<td>{{ customer.username.firstName }} {{ customer.username.lastName }}</td>
									<td>{{ customer.callName }}</td>
									<td>{{ customer.socialReason }}</td>
									<td>{{ customer.deliveryAddress }}</td>
									<td>{{ customer.deliveryAddressZipCode }} {{ customer.deliveryAddressCity }}</td>
									<td>date</td>
									<td>Actions</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}